{
  "manifest_version": 3,
  "name": "CyberSurfing TimeLine BETA",
  "description": "统计你的网上冲浪时间线,此扩展程序目前处于 Beta 版测试阶段",
  "version": "1.0.0",
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "38": "icon/38.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "permissions": [
    "history",
    "storage",
    "alarms",
    "tabs",
    "scripting"
  ],
  "options_ui": {
    "open_in_tab": true,
    "page": "options.html"
  },
  "content_scripts": [],
  "commands": {
    "wxt:reload-extension": {
      "description": "Reload the extension during development",
      "suggested_key": {
        "default": "Alt+R"
      }
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "chrome_url_overrides": {
    "history": "history.html"
  },
  "action": {
    "default_title": "History Stats",
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "http://localhost/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' http://localhost:3000; object-src 'self';",
    "sandbox": "script-src 'self' 'unsafe-inline' 'unsafe-eval' http://localhost:3000; sandbox allow-scripts allow-forms allow-popups allow-modals; child-src 'self';"
  }
}